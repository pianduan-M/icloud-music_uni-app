.list_item {
  padding: 10rpx 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding-left: 30rpx;
  max-width: 100vw;
  overflow: hidden;
}
.list_item .cover {
  width: 180rpx;
  height: 101.2rpx;
  overflow: hidden;
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
  border-radius: 10rpx;
  margin-right: 20rpx;
  position: relative;
}
.list_item .cover .iconfont {
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  color: white;
}
.list_item .cover .img {
  width: 100%;
}
.list_item .song_info {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  overflow: hidden;
}
.list_item .song_info .song_name_wrap {
  width: 100%;
  overflow: hidden;
}
.list_item .song_info .song_name_wrap .song_name {
  width: 100%;
  font-size: 32rpx;
  color: rgba(0, 0, 0, 0.8);
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.list_item .song_info .song_name_wrap .singer_wrap {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.list_item .song_info .song_name_wrap .playlist_info {
  width: 100%;
  font-weight: 300;
  font-size: 24rpx;
  color: #919191;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-right: 10rpx;
}
.list_item .song_info .icon {
  width: 50rpx;
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
  text-align: center;
  -webkit-transform: scale(1.1);
          transform: scale(1.1);
  color: #919191;
}
.list_item .item_menu {
  width: 80rpx;
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
  text-align: center;
}

