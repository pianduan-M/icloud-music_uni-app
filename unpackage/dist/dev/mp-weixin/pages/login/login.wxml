<view class="login_container"><view class="login_title"><text>登录体验更精彩</text><view>{{type==='id'?'':'未注册手机号码登录后将自动创建账号'}}</view></view><view data-event-opts="{{[['tap',[['handleLoginType',['$event']]]]]}}" class="login_tab" bindtap="__e"><view class="{{['tab_item ',type==='id'?'active':'']}}"><text id="id">账号登录</text></view><view class="{{['tab_item ',type==='phone'?'active':'']}}"><text id="phone">验证码登录</text></view></view><view class="login_form"><block wx:if="{{type==='id'}}"><block class="login_id"><view class="login_row"><view class="label">手机/邮箱:</view><view class="form_input"><input type="text" id="user" placeholder="输入手机号码/邮箱" focus="{{true}}" placeholder-style="font-size: 24rpx" data-event-opts="{{[['input',[['changInput',['$event']]]]]}}" value="{{user.value}}" bindinput="__e"/><view class="roles">{{user.roleText}}</view></view></view><view class="login_row"><view class="label">密码:</view><view class="form_input"><input type="password" id="password" placeholder="输入密码" placeholder-style="font-size: 24rpx" data-event-opts="{{[['input',[['changInput',['$event']]]]]}}" value="{{password.value}}" bindinput="__e"/><view class="roles">{{password.roleText}}</view></view></view></block></block><block wx:else><block class="login_phone"><view class="login_row"><view class="label">手机号码:</view><view class="form_input"><input type="text" id="user" placeholder="输入手机号码" focus="{{true}}" placeholder-style="font-size: 24rpx" data-event-opts="{{[['input',[['changInput',['$event']]]]]}}" value="{{user.value}}" bindinput="__e"/><view class="roles">{{user.roleText}}</view></view></view><view class="login_row"><view class="label">验证码:</view><view class="form_input"><input type="text" id="password" placeholder="输入验证码" placeholder-style="font-size: 24rpx" data-event-opts="{{[['input',[['changInput',['$event']]]]]}}" value="{{password.value}}" bindinput="__e"/><view class="roles">{{password.roleText}}</view><button disabled="{{isDisable}}" data-event-opts="{{[['tap',[['sendAuth',['$event']]]]]}}" bindtap="__e">{{''+(isDisable?timer:"获取验证码")+''}}</button></view></view></block></block><button data-event-opts="{{[['tap',[['login',['$event']]]]]}}" class="submit" bindtap="__e">登录</button></view></view>