.fixed {
  position: fixed;
  top: --window-top;
  left: 0;
  right: 0;
  background-color: #fff;
  z-index: 999;
  display: -webkit-box !important;
  display: -webkit-flex !important;
  display: flex !important;
  -webkit-animation: tabFixed 0.2s linear;
          animation: tabFixed 0.2s linear;
}
@-webkit-keyframes tabFixed {
from {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    opacity: 0.5;
}
to {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    opacity: 1;
}
}
@keyframes tabFixed {
from {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    opacity: 0.5;
}
to {
    display: -webkit-box;
    display: -webkit-flex;
