.playlist_tab {
  padding-top: 30rpx;
  padding-bottom: 10rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.playlist_tab .tab_item {
  position: relative;
  width: 100%;
  text-align: center;
  font-weight: 600;
  font-size: 36rpx;
}
.playlist_tab .tab_item:first-child::after {
  content: '';
  position: absolute;
  right: 0;
  top: 50%;
  width: 1px;
  height: 50%;
  background-color: #919191;
  -webkit-transform: translateY(-50%) scaleX(0.5);
          transform: translateY(-50%) scaleX(0.5);
}
.playlist_tab .tab_item ._span {
  position: relative;
  z-index: 1;
}
.playlist_tab .tab_item.active ._span::before {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: -1;
  width: 100%;
  height: 12rpx;
  background: -webkit-linear-gradient(left, #f64649, #ff6063);
  background: linear-gradient(to right, #f64649, #ff6063);
  border-radius: 12rpx;
  -webkit-transform: scaleX(1.1);
          transform: scaleX(1.1);
}

