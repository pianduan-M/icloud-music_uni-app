.like_music {
  padding: 30rpx;
  margin: 20rpx 0;
  border-radius: 20rpx;
  background-color: #fff;
}
.like_music .like_music_container {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.like_music .like_music_container .like_music_pic {
  width: 90rpx;
  height: 90rpx;
  background-color: #919191;
  border-radius: 15rpx;
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
  margin-right: 20rpx;
  position: relative;
  overflow: hidden;
  border: 1rpx solid #f8f8f8;
}
.like_music .like_music_container .like_music_pic .iconfont {
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  color: #fff;
  font-size: 50rpx;
}
.like_music .like_music_container .like_music_text {
  letter-spacing: 2rpx;
  font-size: 30rpx;
  font-weight: 400;
  color: #272727;
  -webkit-box-flex: 3;
  -webkit-flex: 3;
          flex: 3;
}
.like_music .like_music_container .like_music_text .num {
  font-size: 20rpx;
  color: #919191;
  font-weight: 300;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.like_music .like_music_container .like_music_text .num .iconfont {
  font-size: 20rpx;
  color: skyblue;
  margin-right: 10rpx;
}
.like_music .like_music_container .like_music_icon {
  font-size: 24rpx;
  font-weight: 300;
  padding: 6rpx 10rpx;
  border: 1px solid rgba(0, 0, 0, 0.2);
  border-radius: 54rpx;
}

