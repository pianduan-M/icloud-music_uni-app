.recommend_resource {
  margin-bottom: 20rpx;
  background-color: #fff;
  padding: 30rpx 0;
}
.recommend_resource .recommed_title {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  margin-bottom: 20rpx;
  padding: 0 30rpx;
}
.recommend_resource .recommed_title .recommed_title_left {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  font-size: 36rpx;
}
.recommend_resource .recommed_title .recommed_title_right {
  color: #616161;
  font-size: 24rpx;
  border: 1px solid #ddd;
  padding: 0 20rpx;
  border-radius: 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.recommend_resource .recommed_title .recommed_title_right .iconfont {
  font-size: 20rpx;
}
.recommend_resource .recommed_title .recommed_title_right .more {
  white-space: nowrap;
}
.recommend_resource .recommend_resource_content {
  height: 300rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-left: 30rpx;
}
.recommend_resource .recommend_resource_content .recomment_item {
  width: 200rpx;
  margin-right: 15rpx;
  color: #000000;
  font-size: 26rpx;
  font-weight: 300;
  position: relative;
}
.recommend_resource .recommend_resource_content .recomment_item image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
}
.recommend_resource .recommend_resource_content .recomment_item .recomment_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.recommend_resource .recommend_resource_content .recomment_item .recomment_icon {
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.2);
  padding: 0 10rpx;
  border-radius: 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}

