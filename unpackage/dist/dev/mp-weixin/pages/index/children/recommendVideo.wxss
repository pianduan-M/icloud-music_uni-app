.recommend_vedio_container .recommed_title .recommed_title_right .iconfont {
  font-size: 20rpx;
}
.recommend_vedio_container .recommend_resource_content {
  height: 320rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin: 0 30rpx;
}
.recommend_vedio_container .recommend_resource_content .recomment_item {
  width: 200rpx;
  height: 320rpx;
  margin-right: 15rpx;
  color: #000000;
  font-size: 26rpx;
  font-weight: 300;
  position: relative;
}
.recommend_vedio_container .recommend_resource_content .recomment_item image {
  width: 200rpx;
  height: 266rpx;
  border-radius: 20rpx;
  margin-bottom: 10rpx;
}
.recommend_vedio_container .recommend_resource_content .recomment_item .recomment_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
