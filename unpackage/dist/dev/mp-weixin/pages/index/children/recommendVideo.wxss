  border-radius: 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.recommend_vedio_container .recommend_resource_content .recomment_item .icon-bofang {
  position: absolute;
  right: 10rpx;
  bottom: 60rpx;
  color: #fff;
