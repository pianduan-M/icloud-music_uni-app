.hot_top {
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
}
.hot_top .hot_top_title {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  padding: 30rpx;
}
.hot_top .hot_top_title .hot_title_left {
  font-size: 36rpx;
}
.hot_top .hot_top_title .hot_title_right {
  color: #616161;
  font-size: 24rpx;
  border: 1px solid #ddd;
  padding: 0 20rpx;
  border-radius: 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.hot_top .hot_top_title .hot_title_right .iconfont {
  font-size: 20rpx;
}
.hot_top .hot_top_main {
  height: 500rpx;
  margin: 0;
}
.hot_top .hot_top_main .hot_top_item {
  padding-bottom: 30rpx;
}
.hot_top .hot_top_main .hot_top_item .top_content {
  margin: 14rpx;
  padding: 20rpx;
  width: calc(100% -20rpx);
  background-color: #fff;
  box-shadow: 1px 1px 5px rgba(0, 0, 0, 0.1);
  border-radius: 20rpx;
}
.hot_top .hot_top_main .hot_top_item .top_content .top_title {
  text-align: center;
}
.hot_top .hot_top_main .hot_top_item .top_content .top_row {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin: 20rpx 0;
}
.hot_top .hot_top_main .hot_top_item .top_content .top_row .song_cover {
  width: 90rpx;
  height: 90rpx;
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
  -webkit-box-flex: 0%;
  -webkit-flex-grow: 0%;
          flex-grow: 0%;
  border-radius: 20rpx;
  overflow: hidden;
}
.hot_top .hot_top_main .hot_top_item .top_content .top_row .song_info_wrap {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
          justify-content: flex-start;
  -webkit-box-align: end;
  -webkit-align-items: flex-end;
          align-items: flex-end;
  -webkit-box-flex: 4;
  -webkit-flex: 4;
          flex: 4;
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
  overflow: hidden;
}
.hot_top .hot_top_main .hot_top_item .top_content .top_row .song_info_wrap .song_num {
  margin: 0 26rpx;
  font-weight: 600;
}
.hot_top .hot_top_main .hot_top_item .top_content .top_row .song_info_wrap .song_name {
  font-weight: 400;
  color: #303030;
  font-size: 28rpx;
  width: 70%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.hot_top .hot_top_main .hot_top_item .top_content .top_row .song_info_wrap .song_singer {
  width: 20%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-weight: 300;
  font-size: 26rpx;
}
.hot_top .hot_top_main .hot_top_item .top_content .top_row .hot_icon {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  text-align: right;
  font-size: 26rpx;
  font-weight: 300;
  color: var(--themeColor);
}

