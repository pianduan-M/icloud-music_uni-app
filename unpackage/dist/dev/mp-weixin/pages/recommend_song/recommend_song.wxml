<view class="playlist_detail"><block wx:if="{{recomend.length}}"><view class="playlist_wrap"><view class="playlist_detail_info"><view class="info_bg"><image class="img" src="{{recomend[0].al.picUrl}}"></image><view class="mask"></view></view><view class="date_wrap"><view class="date"><view class="month">{{month}}</view><view class="line">/</view><view class="day">{{day}}</view></view><view class="text"><text>查看今日运势</text><text class="iconfont icon-rightarrow"></text></view></view></view><view class="playlist_content"><view class="playlist_content_head"><view class="head_left"><text class="iconfont icon-play1"></text></view><view class="head_center"><view class="text"><text>播放全部</text></view></view><view class="head_right"><text class="iconfont icon-select"></text></view></view><view class="playlist_content_list"><block wx:for="{{recomend}}" wx:for-item="item" wx:for-index="index" wx:key="id"><view data-event-opts="{{[['tap',[['toPlay',[index]]]]]}}" class="list_item" bindtap="__e"><view class="cover"><image class="cover_img" src="{{item.al.picUrl}}" mode="widthFix"></image></view><view class="song_info"><view class="song_name_wrap"><view class="song_name">{{item.name}}</view><view class="singer_wrap"><block wx:if="{{item.fee==1}}"><text class="tag">VIP</text></block><text class="singer">{{item.ar[0].name+"-"+item.al.name}}</text></view></view><block wx:if="{{item.mv!==0}}"><view class="icon"><text class="iconfont icon-bofang"></text></view></block></view><view class="item_menu"><text class="iconfont icon-diandiandianshu"></text></view></view></block></view></view></view></block><block wx:if="{{isError}}"><reload bind:click="__e" vue-id="efcc6000-1" data-event-opts="{{[['^click',[['reload']]]]}}" bind:__l="__l"></reload></block></view>